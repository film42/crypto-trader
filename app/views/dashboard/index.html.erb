                            <option value="USD" selected="selected">US Dollar (Default)</option>
                            <option value="BTC">BitCoin</option>
                            <option value="LTC">LiteCoin</option>
                            <option value="NMC">NameCoin</option>
                          </select>
                        </div>

                        <div class="control-group">
                          <label class="control-label span3">Amount</label>
                          <div class="controls">
                            <input type="text" class="input-medium span8 transaction-amount">
                          </div>
                        </div>

                        <div class="control-group" style="margin-top: 12px;">
