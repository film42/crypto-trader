                            <option value="">Choose</option>
                            <option value="USD">US Dollar</option>
                            <option value="BTC" selected="selected">BitCoin (Default)</option>
                            <option value="LTC">LiteCoin</option>
                            <option value="NMC">NameCoin</option>
                          </select>
                        </div>

