    <!-- BEGIN PAGE CONTAINER-->
    <div class="page-content"> 
      <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
      <div id="portlet-config" class="modal hide">
        <div class="modal-header">
          <button data-dismiss="modal" class="close" type="button"></button>
          <h3>Widget Settings</h3>
        </div>
        <div class="modal-body"> Widget settings form goes here </div>
      </div>
      <div class="clearfix"></div>
      <div class="content">  
        <div class="page-title">  
          <h3>Dashboard </h3>   
        </div>
        <div id="container">
        <div class="row-fluid spacing-bottom">
          <div class="span8">
            <div class="row-fluid spacing-bottom">
              <div class="span12 tiles white ">
                <div class="no-margin-grid">

                  <div class="row-fluid flash-body"> 
                    <% if flash[:notice] %>
                      <div class="row-fluid flash-message notice-flash"> 
                        <p class=""><%= flash[:notice] %></p>
                      </div>
                    <% elsif flash[:error] %>
                      <div class="row-fluid flash-message error-flash"> 
                        <p class=""><%= flash[:error] %></p>
                      </div>
                    <% end %>
                  </div>

                  <div class="row-fluid"> 
                    <div class="tile-more-content span4">
                      <div class="tiles green">
                       <div class="tiles-body">
                        <div class="heading">Wallet</div>  
                      </div>
                      <div class="tile-footer">
                        <span class="balance-frame">Total: </span><strong>$<span class="balance-total"><%=  number_with_precision current_user.wallet.balance, precision: 2 %></span></strong>
                      </div>
                    </div>
                    <div class="tiles-body  wallet-list" >
                      <ul class="progress-list" >
                        <li>
                          <div class="details-wrapper">
                            <div class="name">US Dollar</div>
                            <div class="description">Balance</div>
                          </div>
                          <div class="details-status pull-right">
                            <strong><span class="animate-number balance-usd" data-value="<%= number_with_precision current_user.wallet.usd_balance, precision: 2 %>" data-animation-duration="200">0</span></strong>
                          </div>
                          <div class="clearfix"></div>
                          <br><br>
                        </li>
                        <li>
                          <div class="details-wrapper">
                            <div class="name">BitCoin</div>
                            <div class="description">Balance</div>
                          </div>
                          <div class="details-status pull-right">
                            <strong><span class="animate-number balance-btc" data-value="<%= number_with_precision current_user.wallet.btc_balance, precision: 2%>" data-animation-duration="200">0</span></strong>
                          </div>
                          <div class="clearfix"></div>
                          <br><br>
                        </li>
                      <li>
                        <div class="details-wrapper">
                          <div class="name">LiteCoin</div>
                          <div class="description">Balance</div>
                        </div>
                        <div class="details-status pull-right">
                          <strong><span class="animate-number balance-ltc" data-value="<%= number_with_precision current_user.wallet.ltc_balance, precision: 2 %>" data-animation-duration="200">0</span></strong>
                        </div>
                        <div class="clearfix"></div>
                        <br><br>
                      </li>        
                      <li>
                        <div class="details-wrapper">
                          <div class="name">NameCoin</div>
                          <div class="description">Balance</div>
                        </div>
                        <div class="details-status pull-right">
                          <strong><span class="animate-number balance-nmc" data-value="<%= number_with_precision current_user.wallet.nmc_balance, precision: 2 %>" data-animation-duration="200">0</span></strong>
                        </div>
                        <br><br>
                        <div class="clearfix"></div>
                      </li>        
                    </ul>

                  </div>
                </div>
                <div class="tiles white span8">
                  <!--TRADE-->
                    <div class="tiles white"> 
                      <div class="tiles-body white">                  
                        <div class="heading">New Trade</div>

                        <div>&nbsp;</div>

                        <%= form_for @transaction, url: {action: "new_transaction"}, html: {class: "nifty_form"} do |f| %>

                          <div class="control-group">
                            <label class="control-label span3">Buy</label>
                            <%= f.select :buy_currency_code, options_for_select(@buy_select_options), {}, class: 'input-medium span8 buy-selector' %>
                          </div>

                          <div class="control-group">
                            <label class="control-label span3"></label>
                            <div class="controls">
                              <%= f.text_field :buy_amount , {class: "input-medium span8 transaction-amount", placeholder: "ex 0.00000"} %>
                            </div>
                          </div>

                          <div class="control-group">
                            <label class="control-label span3">Using</label>
                            <%= f.select :using_currency_code, options_for_select(@using_select_options), {}, class: 'input-medium span8 using-selector' %>
                          </div>


                          <div class="control-group" style="margin-top: 12px;">
                            <label class="control-label span3">Subtotal</label>
                            <div class="controls">
                              <h4><span class="transaction-subtotal">0.00000</span></h4>
                            </div>
                          </div>

                          <div class="control-group fee-group" style="margin-top: 23px;">
                            <label class="control-label span3">Fee</label>
                            <div class="controls">
                              <h4>0.06% is <span class="transaction-charge">0.00000</span></h4>
                            </div>
                          </div>
                          
                          <div id="order-total" class="control-group" style="margin-top: 23px;">
                            <label class="control-label span3"><strong>Total</strong></label>
                            <div class="controls">
                              <h4><strong></strong><strong class="transaction-total">0.00000</strong></h4>
                            </div>
                          </div>

                          <div id="place-order" class="control-group" style="margin-top: 23px;">
                            <button type="submit" class="btn btn-dark btn-cons">
                              <i class="icon-ok"></i>
                              Place Order
                            </button>
                          </div>

                        <% end %>
                      </div>    
                    </div>
                    <!--TRADE END-->       
                  <div class="clearfix"></div>  
                </div>   
              </div>
            </div>
          </div>
        </div>        

        <div class="row-fluid spacing-bottom">
          <div class="span12 tiles white ">
            <div class="no-margin-grid">
              <div class="row-fluid">
              <div class="tiles-body ">
                <h4>Transaction History</h4> 
              </div>
              <table class="table no-more-tables">
                <thead>
                  <tr>
                    <th >Bought</th>
                    <th >Sold</th>
                    <th >USD Value</th>
                    <th >Balance</th>
                    <th >Time</th>
                  </tr>
              </thead>
              <tbody>
                <% @transactions.each do |t| %>
                  <tr>
                    <td><%= t.buy_currency_code.upcase %>&nbsp;<strong><%= number_with_precision t.buy_amount, precision: 3 %></strong></td>
                    <td><%= t.using_currency_code.upcase %>&nbsp;<strong><%= number_with_precision t.total, precision: 3  %></strong></td>
                    <td>USD&nbsp;<strong><%= number_with_precision t.total_usd, precision: 3  %></strong></td>
                    <td>USD&nbsp;<strong><%= number_with_precision t.new_balance, precision: 3  %></strong></td>
                    <td class="moment-date" date="<%= t.created_at %>"><%= t.created_at %></td>
                  </tr>
                <% end %>
                <% if @transactions.size == 0 %>
                  <tr>
                    <td><p>No Transactions</p></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>



</div>



